<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Purple theme specific resources -->

    <Color x:Key="WindowBackgroundColor">#6A0DAD</Color>
    <Color x:Key="IconColor">#FFFFFF</Color>
    <Color x:Key="ButtonBackgroundColor">#4E0D6A</Color>
    <Color x:Key="ButtonMouseOverColor">#69349C</Color>
    <Color x:Key="TextEditorBackgroundColor">#3B094F</Color>
    <Color x:Key="TextEditorForegroundColor">#FFFFFF</Color>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}" />
    <SolidColorBrush x:Key="ButtonMouseOverBrush" Color="{StaticResource ButtonMouseOverColor}" />
    <SolidColorBrush x:Key="TextEditorBackgroundBrush" Color="{StaticResource TextEditorBackgroundColor}" />
    <SolidColorBrush x:Key="TextEditorForegroundBrush" Color="{StaticResource TextEditorForegroundColor}" />

</ResourceDictionary>
